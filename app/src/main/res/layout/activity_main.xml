<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="383dp"
        android:layout_height="98dp"
        android:layout_marginTop="52dp"
        android:text="Catalog Fever"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_removeAdd"
        android:layout_width="308dp"
        android:layout_height="65dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="108dp"
        android:onClick="removeAdd"
        android:text="@string/btn_add_remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button2_viewcatalog"
        android:layout_width="308dp"
        android:layout_height="65dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="112dp"
        android:onClick="listPerform"
        android:text="@string/btn_view_catalog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_removeAdd" />

</androidx.constraintlayout.widget.ConstraintLayout>